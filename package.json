{
  "name": "@eduardofurihata/labzz-mcp-devhub",
  "version": "2.0.0",
  "description": "Eduzz MCP DevHub - Unified MCP server with knowledge base, API client, and configuration management",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "labzz-mcp-devhub": "./cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduardofurihata/labzz-mcp-devhub.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces && npm run build:root",
    "build:root": "tsc -p tsconfig.build.json",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf dist",
    "sync": "npm run sync -w @eduzz/mcp-knowledge",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "cli.js",
    "dist/**",
    "packages/*/dist/**",
    "packages/*/package.json",
    "packages/mcp-knowledge/data/**"
  ],
  "keywords": [
    "eduzz",
    "mcp",
    "model-context-protocol",
    "ai",
    "api",
    "claude"
  ],
  "author": "Eduardo Furihata",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0",
    "@xenova/transformers": "^2.17.0",
    "turndown": "^7.1.2",
    "node-cron": "^3.0.3",
    "playwright": "^1.40.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
