{
  "name": "@eduardofurihata/labzz-mcp-devhub",
  "version": "1.0.3",
  "description": "Eduzz MCP Suite - Knowledge base, API client, and configuration management",
  "private": false,
  "type": "module",
  "bin": {
    "labzz-mcp-devhub": "./cli.js",
    "eduzz-config": "./packages/mcp-config/dist/cli.js",
    "eduzz-knowledge": "./packages/mcp-knowledge/dist/cli.js",
    "eduzz-api": "./packages/mcp-api/dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eduardofurihata/labzz-mcp-devhub.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "sync": "npm run sync -w @eduzz/mcp-knowledge",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "cli.js",
    "packages/*/dist/**",
    "packages/*/package.json",
    "packages/mcp-knowledge/data/**"
  ],
  "keywords": [
    "eduzz",
    "mcp",
    "model-context-protocol",
    "ai",
    "api",
    "claude"
  ],
  "author": "Eduardo Furihata",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
