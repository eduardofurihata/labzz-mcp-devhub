{
  "name": "@eduzz/mcp-api",
  "version": "1.0.0",
  "description": "Eduzz API client with auto-generated tools from OpenAPI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "eduzz-api": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "serve": "node dist/cli.js serve"
  },
  "keywords": [
    "eduzz",
    "mcp",
    "api-client",
    "openapi"
  ],
  "license": "MIT",
  "dependencies": {
    "@eduzz/mcp-config": "^1.0.0",
    "@eduzz/mcp-knowledge": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ]
}
